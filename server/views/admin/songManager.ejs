<%- include('../partials/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <h2 class="mb-4 text-center fw-bold">Manage Songs</h2>


  <div class="card shadow-sm mb-5">
    <div class="card-header bg-primary text-white fw-semibold fs-5">
      Add New Song
    </div>
    <div class="card-body">
      <form action="/admin/songs/add" method="POST" enctype="multipart/form-data" novalidate>
        <div class="row g-3">
          <div class="col-md-6">
            <label for="title" class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
            <input id="title" name="title" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="artist" class="form-label fw-semibold">Artist</label>
            <input id="artist" name="artist" class="form-control" placeholder="Optional">
          </div>
          <div class="col-md-6">
            <label for="language" class="form-label fw-semibold">Language</label>
            <input id="language" name="language" class="form-control" placeholder="Optional">
          </div>
          <div class="col-md-6">
            <label for="fileUrl" class="form-label fw-semibold">Song File <span class="text-danger">*</span></label>
            <input id="fileUrl" type="file" name="fileUrl" class="form-control" accept="audio/*" required>
          </div>
          <div class="col-md-6">
            <label for="imageUrl" class="form-label fw-semibold">Image</label>
            <input id="imageUrl" type="file" name="imageUrl" class="form-control" accept="image/*">
          </div>
        </div>
        <button type="submit" class="btn btn-success mt-4 w-100 fw-semibold">Add Song</button>
      </form>
    </div>
  </div>

  
  <div class="table-responsive shadow-sm rounded">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead class="table-dark text-center">
        <tr>
          <th>Title</th>
          <th>Artist</th>
          <th>Language</th>
          <th>File</th>
          <th>Image</th>
          <th>Status</th>
          <th style="min-width: 180px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% songs.forEach(song => { %>
          <tr>
            <td><%= song.title %></td>
            <td><%= song.artist || '-' %></td>
            <td><%= song.language || '-' %></td>
            <td class="text-center">
              <% if (song.fileUrl) { %>
                <a href="<%= song.fileUrl %>" target="_blank" class="btn btn-sm btn-outline-primary" role="button" aria-label="Play <%= song.title %>">Play</a>
              <% } else { %>
                <span class="text-muted">No file</span>
              <% } %>
            </td>
            <td class="text-center">
              <% if (song.imageUrl) { %>
                <img src="<%= song.imageUrl %>" alt="Image for <%= song.title %>" class="rounded" style="width:50px; height:50px; object-fit:cover;">
              <% } else { %>
                <span class="text-muted">No image</span>
              <% } %>
            </td>
            <td class="text-center">
              <span class="badge <%= song.isActive ? 'bg-success' : 'bg-secondary' %> px-3 py-2 fs-6">
                <%= song.isActive ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td class="text-center">
            
              <button type="button" class="btn btn-sm btn-warning me-1 mb-1" data-bs-toggle="modal" data-bs-target="#editModal<%= song._id %>">
                Edit
              </button>

              
              <form action="/admin/songs/delete/<%= song._id %>" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger me-1 mb-1" onclick="return confirm('Are you sure you want to delete this song?')">
                  Delete
                </button>
              </form>

              
              <form action="/admin/songs/toggle/<%= song._id %>" method="POST" class="d-inline">
                <button class="btn btn-sm btn-info mb-1">
                  <%= song.isActive ? 'Deactivate' : 'Activate' %>
                </button>
              </form>
            </td>
          </tr>

      
          <div class="modal fade" id="editModal<%= song._id %>" tabindex="-1" aria-labelledby="editModalLabel<%= song._id %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <form action="/admin/songs/edit/<%= song._id %>" method="POST" enctype="multipart/form-data" novalidate>
                  <div class="modal-header bg-warning bg-opacity-75">
                    <h5 class="modal-title" id="editModalLabel<%= song._id %>">Edit: <%= song.title %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="mb-3">
                      <label for="editTitle<%= song._id %>" class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                      <input id="editTitle<%= song._id %>" name="title" class="form-control" value="<%= song.title %>" required>
                    </div>
                    <div class="mb-3">
                      <label for="editArtist<%= song._id %>" class="form-label fw-semibold">Artist</label>
                      <input id="editArtist<%= song._id %>" name="artist" class="form-control" value="<%= song.artist %>">
                    </div>
                    <div class="mb-3">
                      <label for="editLanguage<%= song._id %>" class="form-label fw-semibold">Language</label>
                      <input id="editLanguage<%= song._id %>" name="language" class="form-control" value="<%= song.language %>">
                    </div>
                    <div class="mb-3">
                      <label for="editFile<%= song._id %>" class="form-label fw-semibold">New Song File (optional)</label>
                      <input id="editFile<%= song._id %>" type="file" name="fileUrl" class="form-control" accept="audio/*">
                    </div>
                    <div class="mb-3">
                      <label for="editImage<%= song._id %>" class="form-label fw-semibold">New Image (optional)</label>
                      <input id="editImage<%= song._id %>" type="file" name="imageUrl" class="form-control" accept="image/*">
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="isActive" id="editActive<%= song._id %>" <%= song.isActive ? 'checked' : '' %>>
                      <label class="form-check-label fw-semibold" for="editActive<%= song._id %>">Active</label>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-primary fw-semibold w-100">Save Changes</button>
                  </div>
                </form>
              </div>
            </div>
          </div>

        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer') %>
